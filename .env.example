# Portfolio Management Application - Environment Variables
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ======================
# Database Configuration
# ======================
POSTGRES_DB=portfolio
POSTGRES_USER=trader
POSTGRES_PASSWORD=your_secure_password_here

# Database connection string (used by backend)
DATABASE_URL=postgresql://trader:your_secure_password_here@postgres:5432/portfolio

# ======================
# Redis Configuration
# ======================
REDIS_URL=redis://redis:6379

# ======================
# Backend Configuration
# ======================
PYTHONUNBUFFERED=1

# Anthropic Claude API (for Epic 8: AI Market Analysis)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.3
ANTHROPIC_TIMEOUT=30
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_RATE_LIMIT=50

# ======================
# Alpha Vantage API (for Epic 4: Market Data Fallback)
# ======================
# Get your API key from: https://www.alphavantage.co/support/#api-key
# Free tier: 5 calls/minute, 100 calls/day
# Optional - app works without it, but enables better European ETF coverage
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_api_key_here
ALPHA_VANTAGE_RATE_LIMIT_PER_MINUTE=5
ALPHA_VANTAGE_RATE_LIMIT_PER_DAY=100

# ======================
# Frontend Configuration
# ======================
VITE_API_URL=http://localhost:8000

# Refresh Intervals (in milliseconds)
VITE_CRYPTO_REFRESH_INTERVAL=60000      # 60 seconds
VITE_STOCK_REFRESH_INTERVAL=120000      # 2 minutes
VITE_PORTFOLIO_REFRESH_INTERVAL=60000   # 60 seconds
VITE_HOLDINGS_REFRESH_INTERVAL=60000    # 60 seconds

# Portfolio Settings
VITE_BASE_CURRENCY=EUR

# API Timeout (in milliseconds)
VITE_API_TIMEOUT=30000

# ======================
# Settings Encryption (for Epic 9: Settings Management)
# ======================
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
# CRITICAL: Keep this key secure! If lost, encrypted settings cannot be recovered.
SETTINGS_ENCRYPTION_KEY=your_generated_encryption_key_here

# ======================
# Development Settings
# ======================
# Set to 'development' or 'production'
NODE_ENV=development
